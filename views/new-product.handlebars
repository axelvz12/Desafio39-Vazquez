<form method="post" enctype="multipart/form-data" action="/products">
    <div style="display: flex; flex-direction: column; align-items: center; justify-content: center; height: 100vh; margin: 0;">

        <div style="max-width: 400px; padding: 20px; border: 1px solid #ccc; border-radius: 8px; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);">
            <label for="title" style="display: block; margin-bottom: 5px;">Título del producto:</label>
            <input type="text" id="title" name="title" placeholder="Ingrese el título" required style="width: 95%; padding: 8px; margin-bottom: 10px;">

            <label for="description" style="display: block; margin-bottom: 5px;">Descripción del producto:</label>
            <textarea id="description" name="description" placeholder="Ingrese la descripción" required style="width: 95%; padding: 8px; margin-bottom: 10px; margin-right: 5px; resize: vertical;"></textarea>

            <label for="price" style="display: block; margin-bottom: 5px;">Precio del producto:</label>
            <input type="text" id="price" name="price" placeholder="Ingrese el precio" required style="width: 95%; padding: 8px; margin-bottom: 10px;">

            <label for="stock" style="display: block; margin-bottom: 5px;">Stock del producto:</label>
            <input type="text" id="stock" name="stock" placeholder="Ingrese el stock" required style="width: 95%; padding: 8px; margin-bottom: 10px;">

            <label for="image" style="display: block; margin-bottom: 5px;">Seleccione una imagen:</label>
            <input type="file" id="image" name="image" accept="image/*" required style="width: 95%; padding: 8px; margin-bottom: 10px;">

            <input type="submit" value="Crear producto" style="background-color: #4caf50; color: white; cursor: pointer; border: none;">
        </div>
        <a href="/" class="home-link" style="margin-top: 10px;">Volver al Inicio</a>
    </div>
</form>

