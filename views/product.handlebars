<div style="text-align: center; max-width: 600px; margin: 0 auto;">
    <h1>{{title}}</h1>
    <p>{{description}}</p>

    {{#if photo}}
        <center><img src="/images/products/{{photo}}" style="max-width: 100%; height: auto;"/></center>
    {{/if}}

    {{#if isStock}}
        <p>Precio: {{price}}</p>
        <a href="/carts/add/{{productId}}" style="background-color: #4caf50; color: white; cursor: pointer; border: none; padding: 8px 12px; text-decoration: none;">Agregar al Carrito</a>
    {{else}}
        <p>No hay stock del producto</p>
    {{/if}}

    <a href="/products" style="text-decoration: none; color: #333; display: block; margin-top: 15px;">
        <button style="background-color: #4285f4; color: white; cursor: pointer; border: none; padding: 8px 12px;">Volver a Productos</button>
    </a>
</div>



