 <h1>Simple Chat</h1>
<form id="chat-form">
    <input type="text" name="user" placeholder="Nombre de usuario">
    <input type="text" name="message" placeholder="Mensaje">
    <button type="button" onclick="enviarMensaje()">Enviar</button>
</form>

<!-- Mostrar mensajes -->
<ul id="chat-messages">
    {{#each messages}}
        <li>{{this.user}}: {{this.content}}</li>
    {{/each}}
</ul>

 <a href="/" class="home-link" style="margin-top: 10px;">Volver al Inicio</a>

<script>
    function enviarMensaje() {
        const user = document.querySelector('input[name="user"]').value;
        const message = document.querySelector('input[name="message"]').value;

        fetch("/products/chat", {
            method: "POST",
            headers: {
                "Content-Type": "application/json",
            },
            body: JSON.stringify({ user, message }),
        })
        .then(response => {
            if (!response.ok) {
                throw new Error("Error al enviar mensaje");
            }
            return response.json();
        })
        .then(data => {
            // Agrega el mensaje a la lista de mensajes sin recargar la pÃ¡gina
            const chatMessages = document.getElementById("chat-messages");
            const newMessage = document.createElement("li");
            newMessage.textContent = `${user}: ${message}`;
            chatMessages.appendChild(newMessage);

            // Limpia los campos del formulario
            document.querySelector('input[name="user"]').value = "";
            document.querySelector('input[name="message"]').value = "";
        })
        .catch(error => {
            console.error("Error:", error);
        });
    }
</script>
<script>
    console.log("Messages:", {{ messages }});
</script>

